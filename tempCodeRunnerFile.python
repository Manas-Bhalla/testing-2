        canvas.draw_line([y, 550], [y-22, 565], 3, "Black")
        canvas.draw_line([y-22, 565], [y, 580], 3, "Black")
        canvas.draw_line([y,550], [y+22, 565], 3, "Black")
        canvas.draw_line([y+22, 565], [y+47, 550], 3, "Black")   


    canvas.draw_circle((y, 450), 20, 1, "Black", "Black")
    y=y-5
