        y=600
    for n in range (0, 600, 10):
        canvas.draw_polygon ([(n, 600), (n+20, 600), (n+5, 560)], 2, "Green", "Green")
    canvas.draw_polygon([(450, 350), (600, 350), (600, 600), (450, 600)], 2, color2, color2 )
    canvas.draw_polygon([(500, 390), (575, 390), (575, 475), (500, 475)], 2, color, color)
